{
  "name": "react-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "bad-words": "^4.0.0",
    "framer-motion": "^12.23.24",
    "jsencrypt": "^3.3.2",
    "lucide-react": "^0.545.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "react-scripts": "^5.0.1",
    "react-select": "^5.10.2",
    "react-select-country-list": "^2.2.3",
    "react-toastify": "^11.0.5",
    "web-vitals": "^2.1.4",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "livekit-client": "^2.4.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:test": "cross-env REACT_APP_ENV=test react-scripts start",
    "start:prod": "cross-env REACT_APP_ENV=production react-scripts start",
    "build": "npm run build:dev",
    "build:dev": "cross-env REACT_APP_ENV=development react-scripts build",
    "build:test": "cross-env REACT_APP_ENV=test react-scripts build",
    "build:prod": "cross-env REACT_APP_ENV=production react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --watchAll=false --coverage",
    "lint": "eslint --ext .js,.jsx src",
    "sca": "audit-ci --config ./security/audit-ci.json",
    "sast": "eslint --no-eslintrc --config security/.eslintrc.security.json --max-warnings=0 --ext .js,.jsx src",
    "dast": "bash security/run-dast.sh",
    "ci:test:soft": "react-scripts test --watchAll=false || echo '⚠ tests failed, continuing'",
    "ci:test:coverage:soft": "react-scripts test --watchAll=false --coverage || echo '⚠ coverage failed, continuing'",
    "ci:lint:soft": "eslint --ext .js,.jsx src || echo '⚠ lint failed, continuing'",
    "ci:sca:soft": "audit-ci --config ./security/audit-ci.json || echo '⚠ SCA failed, continuing'",
    "ci:sast:soft": "eslint --no-eslintrc --config security/.eslintrc.security.json --max-warnings=999999 --ext .js,.jsx src || echo '⚠ SAST failed, continuing'",
    "ci:dast:soft": "bash security/run-dast.sh || echo '⚠ DAST failed, continuing'",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/utils/**/*.{js,jsx}",
      "!src/utils/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --ext .js,.jsx --max-warnings=0",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-security": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.10"
  }
}
